<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <EditText
           android:id="@+id/registery_userName"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="用户名"/>

        <EditText
            android:id="@+id/registery_userPsw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"/>
        <EditText
            android:id="@+id/registery_userEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="邮箱"/>

    </LinearLayout>

    <Button
        android:id="@+id/registery_okBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"/>

</LinearLayout>